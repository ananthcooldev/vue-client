<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- API is on different domain (https://local.api.com), so no proxy needed -->
        <!-- API requests will go directly to https://local.api.com/api -->
        
        <!-- Handle client-side routing for Vue.js - Rewrite all non-file requests to index.html -->
        <rule name="Vue Routes" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <!-- Don't rewrite if the file exists -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <!-- Don't rewrite if the directory exists -->
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <!-- Don't rewrite API calls (handled by API Proxy rule above) -->
            <add input="{REQUEST_URI}" pattern="^/api" negate="true" />
            <!-- Don't rewrite assets (js, css, images, etc.) -->
            <add input="{REQUEST_URI}" pattern="\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$" negate="true" />
          </conditions>
          <action type="Rewrite" url="/index.html" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>
    
    <!-- HTTP Error handling -->
    <httpErrors errorMode="Detailed" />
  </system.webServer>
</configuration>
